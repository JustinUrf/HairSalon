@{
Layout = "_Layout";
}

@using HairSalon.Models;

@if (Model.Count == 0)
{
  <h2>No current Stylists Saved.</h2>
}

<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.Details}", "Details", "Stylists", new { id = stylist.StylistId }) </li>
  }
</ul>

<p>@Html.ActionLink("Add a new Stylist", "Create")</p>
<p>@Html.ActionLink("Add a new client", "Create", "Clients")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>